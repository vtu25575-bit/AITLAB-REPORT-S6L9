import openai\par
openai.api_key = "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"\par
completion = openai.ChatCompletion.create(model="gpt-3.5-turbo", messages=[\{"role": "user",\par
